<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/widget_toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mPhotoRv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50px">
        
        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:background="@mipmap/mes_picorich"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15px"
            android:text="@string/origin_picture"
            android:layout_marginLeft="47px"
            android:layout_centerVertical="true"
            android:textColor="@color/bar_green"/>
        
        <Button
            android:id="@+id/mSendPicBtn"
            android:layout_width="78px"
            android:layout_height="36px"
            android:text="@string/send_pic"
            android:textSize="14px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_green_bg"/>
    </RelativeLayout>

</LinearLayout>