<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mConversationItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_click"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="51px"
        android:layout_height="51px"
        android:layout_marginTop="7px"
        android:layout_marginBottom="7px"
        android:layout_marginLeft="20px">
        <com.im.qtec.widget.PortraitView
            android:id="@+id/mPortraitView"
            android:layout_width="48px"
            android:layout_height="48px" 
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/mBadgeLabel"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="right"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="10px"
            android:background="@drawable/shape_badge"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_marginRight="10px"
        android:layout_marginLeft="13px">
        <TextView
            android:id="@+id/mTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16px"/>
        <TextView
            android:id="@+id/mTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="13px"
            android:textColor="@color/time_text"/>
        
        <TextView
            android:id="@+id/mTvContent"
            android:layout_below="@id/mTvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14px"
            android:textColor="@color/content_text"/>
    </RelativeLayout>
</LinearLayout>